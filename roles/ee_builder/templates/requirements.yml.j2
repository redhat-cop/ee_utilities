---
{% if __execution_environment_definition.collections is defined %}
{% if __execution_environment_definition.collections|length %}
collections:
{% for item in __execution_environment_definition.collections %}
- name: {{ item.name }}
{% if item.version is defined %}
  version: {{ item.version }}
{% endif %}
{% if item.type is defined %}
  type: {{ item.type }}
{% endif %}
{% if item.source is defined %}
  source: {{ item.source }}
{% endif %}
{% endfor %}
{% endif %}
{% endif %}
{% if __execution_environment_definition.roles is defined %}
{% if __execution_environment_definition.roles|length %}
roles:
{% for item in __execution_environment_definition.roles %}
- name: {{ item.name }}
{% if item.version is defined %}
  version: {{ item.version }}
{% endif %}
{% endfor %}
{% endif %}
{% endif %}
